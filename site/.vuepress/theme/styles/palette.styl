// .vuepress/override.styl, SHOULD ONLY contain "stylus constants override".
// $accentColor = #ed3f7a
//
// More things
$tandemPink = #ed3f7a
$tandemGrey = #47474a
$lightGrey = #f8f8f8
//
// Backwards compat
$landoPink = #ed3f7a
$landoGrey = #47474a
$landoBlue = #035785
$landoOrange = #ff7042
$landoGreen = #00a38f
$landoGrey = #2c3e50
$newsletterBgColor = $lightGrey
//
// Colors
$accentColor = $tandemPink
$textColor = $tandemGrey
$darkTextColor = #47474a
$middleGrey = lighten($darkTextColor, 15%)
$borderColor = darken($lightGrey, 15%)
$darkBorderColor = $tandemGrey
$codeBgColor = #000
$bgColor = #fff
$headerBgColor = $bgColor;
$footerBgColor = $darkTextColor
$footerColor = #828282
//
// Breakpoints
$MQXL           = 1600px
$MQLarge        = 1348px
$MQSmall        = 1000px
$MQNarrow       = 768px
$MQMobile       = 959px
$MQMobileNarrow = 450px
//
// Layout
$contentMaxWidth = $MQSmall
//
// Code
$lineNumbersWrapperWidth = 3.5rem
$codeLang = js ts html md vue css sass scss less stylus go java c sh yaml py docker dockerfile makefile
//
// Type
$font--body = "GalaxieCopernicus", "PT Serif", serif
$font--display = "AvenirNext", "Helvetica Neue", Arial, sans-serif

/*
Type Scale | Major Third
https://type-scale.com/?size=16&scale=1.250&text=A%20Visual%20Type%20Scale&font=Poppins&fontweight=400&bodyfont=Poppins&bodyfontweight=400&lineheight=1.65&backgroundcolor=white&fontcolor=%23333&preview=false
*/
typeScale = {
  'a':      5.96rem,   // 95.37
  'b':      4.768rem,  // 76.29
  'c':      3.052rem,  // 48.83
  'd':      2.441rem,  // 39.06
  'e':      1.953rem,  // 31.25
  'f':      1.563rem,  // 25
  'g':      1.25rem,   // 20
  'h':      1rem,      // 16
  'i':      0.8rem,    // 12.8
  'j':      0.64rem,   // 8.19
  'small':  0.8rem,    // 12.8
  'tiny':   0.64rem,   // 8.19
  'body':   1rem,      // 16
  'bigboi': 7.451rem,  // 119.21
  'biggestboi': 12rem
}


// usng these block declatations for reused content
// seems to play better with vue and stylus than stylus
// $placeholders https://stylus-lang.com/docs/extend.html#extending-placeholder-selectors

bodyType = @block
  font-family $font--body
  font-weight 900
  letter-spacing -0.0265em
  line-height 1.265
  color $textColor

displayType = @block
  font-family $font--display
  font-weight 900
  letter-spacing -0.0265em;
  line-height 0.85

visuallyHidden = @block
  position fixed
  top -200vh
  left -200vw
  visibility hidden
  opacity 0
  width 1px
  height 1px
  overflow hidden

visuallyShown = @block
  opacity 1
  width auto
  height auto
  position static
  overflow visible
  visibility visible

$logoWidth = 280
$logoHeight = 56
logoDimensions = @block
  width $logoWidth px
  height $logoHeight px

workGrid = @block
  margin-top 4rem
  display flex-grid
  article
    width 100%
    height 100%
    display block
    @media (max-width: $MQMobile)
      width 100%
      height 500px
      display inline-flex
  .load-more
    margin-top 2em
    margin-bottom 2em

//
// Custom Block - point - should be a component or variant thereof
cb_point = @block
  margin-bottom 0
  margin-top 0
  border-bottom 0
  text-align center
  flex-direction column
  justify-content center
  > h2, > h3
    width 100%
  ul
    justify-content center
    li
      margin-bottom 0.75rem
  @media (min-width: $MQMobile)
    display flex
    text-align left
    flex-direction row
    > h2, > h3
      justify-content left
      width 40vw
      padding-right: 1em
      margin-top 0
    > p
      width 70%
      margin-top 0
    .post-tags
      width 100%
      ul
        margin 0
        list-style none
        display flex
        margin 0  background $lightGrey
        padding 0
        flex-wrap wrap
        justify-content left

tagWrapper = @block
  position relative
  display inline-block
  background $lightGrey
  transition none
  border none
  margin-right 1rem
  padding 0 0.5rem
  span
    display inline-block
    box-sizing border-box
    margin 0
    border none
    font-size typeScale.i
    font-weight 300
  &::after
    content " "
    position absolute
    right -0.68rem
    border-bottom 0.875em solid transparent
    border-top    0.875em solid transparent
    border-left   0.7em solid $lightGrey

loadMore = @block
  background $tandemPink
  padding 1.5em 1em
  margin 1em
  border-radius 0.25rem
  cursor pointer
  text-align center
  color black
  { displayType }
  text-size typeScale.d
  transition-property background-color, color, padding
  transition-timing-function ease-out
  transition-duration 0.25s
  &:hover, &:focus, &:active
    background-color #000
    padding 2em 1em
    color white
  button
    all unset
