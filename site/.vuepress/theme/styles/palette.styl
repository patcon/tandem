// .vuepress/override.styl, SHOULD ONLY contain "stylus constants override".
// $accentColor = #ed3f7a
//
// More things
$tandemPink = #ed3f7a
$tandemGrey = #47474a
$lightGrey = #f8f8f8
//
// Backwards compat
$landoPink = #ed3f7a
$landoGrey = #47474a
$landoBlue = #035785
$landoOrange = #ff7042
$landoGreen = #00a38f
$landoGrey = #2c3e50
$newsletterBgColor = $lightGrey
//
// Colors
$accentColor = $tandemPink
$textColor = $tandemGrey
$darkTextColor = #47474a
$middleGrey = lighten($darkTextColor, 15%)
$borderColor = darken($lightGrey, 15%)
$darkBorderColor = $tandemGrey
$codeBgColor = #000
$bgColor = #fff
$headerBgColor = $bgColor;
$footerBgColor = $darkTextColor
$footerColor = #828282
//
// Layout
$contentWidth   = 740px
//
// Breakpoints
$MQXL           = 1600px
$MQLarge        = 1348px
$MQSmall        = 1184px
$MQNarrow       = 768px
$MQMobile       = 959px
$MQMobileNarrow = 450px
//
// Code
$lineNumbersWrapperWidth = 3.5rem
$codeLang = js ts html md vue css sass scss less stylus go java c sh yaml py docker dockerfile makefile
//
// Type
$font--body = "GalaxieCopernicus", "PT Serif", serif
$font--display = "AvenirNext", "Helvetica Neue", Arial, sans-serif

// usng these block declatations for reused content
// seems to play better with vue and stylus than stylus
// $placeholders https://stylus-lang.com/docs/extend.html#extending-placeholder-selectors

bodyType = @block
  font-family $font--body
  font-weight 900
  letter-spacing -0.0265em
  line-height 1.265
  color $textColor

displayType = @block
  font-family $font--display
  font-weight 900
  letter-spacing -0.0265em;
  line-height 0.85

visuallyHidden = @block
  position fixed
  top -200vh
  left -200vw
  visibility hidden
  opacity 0
  width 1px
  height 1px
  overflow hidden

$logoWidth = 280
$logoHeight = 56
logoDimensions = @block
  width $logoWidth px
  height $logoHeight px

workGrid = @block
  margin-top 4rem
  display flex-grid
  article
    width 100%
    height 100%
    display block
    @media (max-width: $MQMobile)
      width 100%
      height 500px
      display inline-flex
  .load-more
    margin-bottom 2em

