// .vuepress/style.styl, your extra styles.

@font-face
  font-family GalaxieCopernicus
  src url("/fonts/GalaxieCopernicus-Book.eot")
  src url("/fonts/GalaxieCopernicus-Book.woff") format("woff"),url("/fonts/GalaxieCopernicus-Book.woff2") format("woff2")
  font-style normal
  font-weight 300

@font-face
  font-family GalaxieCopernicus
  src url("/fonts/GalaxieCopernicus-Medium.eot")
  src url("/fonts/GalaxieCopernicus-Medium.woff") format("woff"),url("/fonts/GalaxieCopernicus-Medium.woff2") format("woff2")
  font-style normal
  font-weight 400

body
  font-family GalaxieCopernicus, PT Serif, serif
  font-weight 300

h1,
h2,
h3,
h4
  color $landoGrey
  font-family "Poppins", "Helvetica Neue", Arial, sans-serif
  font-size 3em
  border 0
  letter-spacing -1px
h2
  font-size 2em
h3
  font-size 1.4em
h4
  font-size 1.2em
a.header-anchor
  padding-right 0
a
  transition all 0.2s

blockquote
  padding 1.5rem 0 1.5rem 1.5rem
  font-size 1.3rem
  color lighten($landoPink, 25%)
  border-left 3px solid lighten($landoGrey, 50%)
  background lighten($landoBlue, 99%)
  font-style italic

article
  header
    all unset

#mobile-header
  display none

.content-wrapper
  padding 0
  min-height calc(100vh - 80px - 60px - 160px)
  max-width none
  margin 0 auto

  @media (max-width: $MQMobile)
    &
      padding 0
      min-height calc(100vh - 20px - 60px - 100px)

.content-wrapper-tandem
  padding 160px 15px 80px 15px
  min-height calc(100vh - 80px - 60px - 160px)
  max-width $contentWidth
  margin 0 auto

  @media (max-width: $MQMobile)
    &
      padding 100px 15px 20px 15px
      min-height calc(100vh - 20px - 60px - 100px)

.custom-block
  &.caption
    background-color: #f8f8f8
    padding: .1em 1em
    color: $textColor
    font-size: .8em
    font-weight: 700
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

  &.thumbnail
    border: 1px dashed #ccc
    padding: 1em

  &.quote
    padding 1.5rem 0 1.5rem 1.5rem
    font-size 1.3rem
    color lighten($landoPink, 25%)
    border-left 3px solid lighten($landoGrey, 50%)
    background lighten($landoBlue, 99%)
    font-style italic

  &.col-wrapper
    @media (min-width: $MQMobile)
      &
        display flex

  &.col-full
    width 100%

    @media (min-width: $MQMobile)
      &
        flex 0 0 100%
        max-width 100%

  &.col-half
    width 100%

    @media (min-width: $MQMobile)
      &
        flex 0 0 50%
        max-width 50%

  &.col-third
    width 100%

    @media (min-width: $MQMobile)
      &
        flex 0 0 33.333333%
        max-width 33.333333%
