// .vuepress/style.styl, your extra styles.

@font-face
  font-family 'AvenirNext'
  src url('/fonts/AvenirNext-Heavy.woff') format('woff'), url('/fonts/AvenirNext-Heavy.woff2') format('woff2')
  font-style normal
  font-display swap
  font-weight 600

@font-face
  font-family GalaxieCopernicus
  src url("/fonts/GalaxieCopernicus-Book.eot")
  src url("/fonts/GalaxieCopernicus-Book.woff") format("woff"),url("/fonts/GalaxieCopernicus-Book.woff2") format("woff2")
  font-style normal
  font-display swap
  font-weight 300

@font-face
  font-family GalaxieCopernicus
  src url("/fonts/GalaxieCopernicus-Medium.eot")
  src url("/fonts/GalaxieCopernicus-Medium.woff") format("woff"),url("/fonts/GalaxieCopernicus-Medium.woff2") format("woff2")
  font-style normal
  font-display swap
  font-weight 400

@font-face
  font-family 'Poppins'
  src url('/fonts/poppins-v12-latin-600.eot')
  src url('/fonts/poppins-v12-latin-600.woff') format('woff'), url('/fonts/poppins-v12-latin-600.woff2') format('woff2')
  font-style normal
  font-display swap
  font-weight 600

@font-face
  font-family 'Poppins'
  src url('/fonts/poppins-v12-latin-900.eot')
  src url('/fonts/poppins-v12-latin-900.woff') format('woff'), url('/fonts/poppins-v12-latin-900.woff2') format('woff2')
  font-style normal
  font-display swap
  font-weight 900

body
  font-family GalaxieCopernicus, PT Serif, serif
  font-weight 300

h1,
h2,
h3,
h4
  color $landoGrey
  { displayType }
  font-size typeScale.d
  border 0
h2
  font-size typeScale.e
h3
  font-size typeScale.f
h4
  font-size typeScale.g

a.header-anchor
  padding-right 0
a
  transition all 0.2s

blockquote
  display flex
  position relative
  flex-wrap wrap
  margin 2em 0
  padding 2em
  border-left 0
  background $lightGrey
  font-size typeScale.f
  color $darkTextColor
  &:before
    display flex
    font-size typeScale.e
    content '"'
    color $tandemPink

  p
    width 90%
    line-height 2
    padding-left 10px
    padding-right 10px
    margin-bottom 1em
  ul
    position absolute
    right 1em
    bottom 1em
    margin 0
    li
      list-style none
      font-style normal
      font-size typeScale.j
      color $tandemPink
      &:before
        content '~'
  small
      list-style none
      font-style normal
      font-size typeScale.j
      color $tandemPink

article
  header
    all unset

.content-wrapper
  { contentWrapper }

.content-wrapper-tandem
  { contentWrapper }
  { contentWrapperTandem }

ul
  &.tags, &.post-meta-tags
    /*
    // display block // reduntant
    @media (min-width: $MQMobile)
      display inline-block
    */
  li
    &.post-tag
      &.tag
        height inherit
      a
        border-radius 0
        background $lightGrey
        font-size typeScale.g
        font-weight 300
        padding 1em 2em
        transition none
        span
          color black
          margin-left -.5em
          margin-right .5em
        &:hover
          transition none
        &:before
          all unset
        &:after
          border-bottom 1.725em solid transparent
          border-left 1.725em solid $lightGrey
          border-top 1.725em solid transparent
        @media (max-width: $MQMobile)
          padding 1em 1em
          margin 0
          margin-bottom 1em
          span
            margin 0
          &:after
            border 0

.custom-block
  position relative
  box-sizing border-box
  padding 2rem
  &.big, &.medium
    p
      { dsplayType }
      font-size typeScale.a
      font-weight 900
      padding 0
      margin 0
  &.medium
    p
      font-size typeScale.b
  &.caption
    background-color $lightGrey
    padding .1em 1em
    p
      { displayType }
      color $textColor
      font-size typeScale.i
      font-weight 300

  &.thumbnail
    border 1px solid $lightGrey
    padding 1em
    margin 2em 0
    img
      width 100%

  &.point
    text-align center
    flex-direction column
    justify-content center
    > h2, > h3
      width 100%
    @media (min-width: $MQSmall)
      display flex
      > h2, > h3
        width 20%
        padding-right: 1em
      > p
        width 70%
        margin-top 0
      &.point
        text-align left
        flex-direction row

  > h2, > h3
    { dsplayType }
    font-size typeScale.e
    font-weight 900
    line-height 1.25
  p
    { bodyType }
    font-size typeScale.g
    line-height 2
.important
  &.important, &.byline
    > h2, > h3
      border 1px #0f0 solids
      { displayType }
      font-size typeScale.e
      @media (min-width: $MQMobile)
        font-size typeScale.c
    p
      font-size typeScale.g
    ol, ul
      margin 1em 1em
      li
        margin-bottom 1em
        { bodyType }
        font-size typeScale.f
        font-weight 300
    br
      display block
      @media (min-width: $MQMobile)
        display contents

  &.byline
    p
      font-style italic
      margin 2em 0
      line-height 2
      color black

  &.col-wrapper, &.col-full, &.col-half, &.col-third
    width 100%
    justify-content space-between

  &.col-full, &.col-half, &.col-third
    justify-content space-between
    p
      font-weight 30
      &.custom-block-title
        font-size typeScale.f

  &.warning, &.tip, &.danger, &.error, &.info
    background-color $lightGrey
    padding 2rem
    p
      &.custom-block-title
        text-transform uppercase
        font-size typeScale.g

  &.warning
    background-color mix($lightGrey, yellow, 70%)

  &.danger, &.error
    background-color mix($lightGrey, red, 80%)

  &.col-wrapper
    @media (min-width: $MQMobile)
      &
        display flex

  &.col-full
    @media (min-width: $MQMobile)
      &
        flex 0 0 100%
        max-width 100%

  &.col-half
    @media (min-width: $MQMobile)
      &
        flex 0 0 49%
        max-width 49%

  &.col-third
    @media (min-width: $MQMobile)
      &
        flex 0 0 32%
        max-width 32%

.small
  font-size typeScale.g
