// .vuepress/style.styl, your extra styles.

@font-face
  font-family GalaxieCopernicus
  src url("/fonts/GalaxieCopernicus-Book.eot")
  src url("/fonts/GalaxieCopernicus-Book.woff") format("woff"),url("/fonts/GalaxieCopernicus-Book.woff2") format("woff2")
  font-style normal
  font-weight 300

@font-face
  font-family GalaxieCopernicus
  src url("/fonts/GalaxieCopernicus-Medium.eot")
  src url("/fonts/GalaxieCopernicus-Medium.woff") format("woff"),url("/fonts/GalaxieCopernicus-Medium.woff2") format("woff2")
  font-style normal
  font-weight 400

body
  font-family GalaxieCopernicus, PT Serif, serif
  font-weight 300

h1,
h2,
h3,
h4
  color $landoGrey
  font-family "Poppins", "Helvetica Neue", Arial, sans-serif
  font-size 3em
  border 0
  letter-spacing -1px
h2
  font-size 2em
h3
  font-size 1.4em
h4
  font-size 1.2em
a.header-anchor
  padding-right 0
a
  transition all 0.2s

blockquote
  padding 1.5rem 0 1.5rem 1.5rem
  font-size 1.3rem
  color lighten($landoPink, 25%)
  border-left 3px solid lighten($landoGrey, 50%)
  background lighten($landoBlue, 99%)
  font-style italic

article
  header
    all unset

#mobile-header
  display none

.content-wrapper
  padding 0
  min-height calc(100vh - 80px - 60px - 160px)
  max-width none
  margin 0 auto

  @media (max-width: $MQMobile)
    &
      padding 0
      min-height calc(100vh - 20px - 60px - 100px)

.content-wrapper-tandem
  padding 160px 15px 80px 15px
  min-height calc(100vh - 80px - 60px - 160px)
  max-width $contentWidth
  margin 0 auto

  @media (max-width: $MQMobile)
    &
      padding 100px 15px 20px 15px
      min-height calc(100vh - 20px - 60px - 100px)
ul
  &.tags, &.post-meta-tags
    @media (max-width: $MQMobile)
      display block
  li
    &.post-tag
      &.tag
        height inherit
      a
        border-radius 0
        background $lightGrey
        font-weight 300
        font-size 1.13rem
        letter-spacing -1.44px
        padding 1em 2em
        transition none
        span
          color black
          margin-left -.5em
          margin-right .5em
        &:hover
          transition none
        &:before
          all unset
        &:after
          border-bottom 1.725em solid transparent
          border-left 1.725em solid $lightGrey
          border-top 1.725em solid transparent
        @media (max-width: $MQMobile)
          padding 1em 1em
          margin 0
          margin-bottom 1em
          span
            margin 0
          &:after
            border 0

.custom-block
  position relative
  p
    font-weight 300
    font-size 1.33rem
    letter-spacing -1.04px
    &.custom-block-title
      font-family "Poppins", "Helvetica Neue", Arial, sans-serif
      font-size 28px
      font-weight 600
      letter-spacing -1.68px
      line-height inherit
      margin-top -5px
  &.big
    p
      font-family "Poppins", "Helvetica Neue", Arial, sans-serif
      font-weight 900
      font-size 96px
      padding 0
      margin 0
      line-height 1
  &.caption
    background-color: #f8f8f8
    padding: .1em 1em
    color: $textColor
    font-size: .8em
    font-weight: 700
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

  &.thumbnail
    border: 1px dashed #ccc
    padding: 1em

  &.point
    display flex
    justify-content center

    p, p.custom-block-title
      display inline-block
    p
      width 70%
      margin-top 0
      &.custom-block-title
        margin-right 100px
        width 20%

    @media (max-width: $MQMobile)
      &.point
        text-align center
        flex-direction column
        p, p.custom-block-title
          display inline-block
          width 100%

  &.important
    p
      font-weight 300
      font-size 1.33rem
      letter-spacing -1.04px
      &.custom-block-title
        font-size 3.64em
        font-family GalaxieCopernicus, PT Serif, serif

  &.col-wrapper, &.col-full, &.col-half, &.col-third
    width 100%
    margin-right 1.68em
  &.col-full, &.col-half, &.col-third
    margin-right 1.68em
    p
      font-weight 300
      font-size 1rem
      &.custom-block-title
        font-size 1.5em

  &.col-wrapper
    @media (min-width: $MQMobile)
      &
        display flex
  &.col-full
    @media (min-width: $MQMobile)
      &
        flex 0 0 100%
        max-width 100%
  &.col-half
    @media (min-width: $MQMobile)
      &
        flex 0 0 50%
        max-width 50%
  &.col-third
    @media (min-width: $MQMobile)
      &
        flex 0 0 33.333333%
        max-width 33.333333%
